<!DOCTYPE html>
<html>
  <head>
    <title>HatterJobListing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid" style="max-width:90%;margin-top:5px;margin-left: auto;
    margin-right: auto;">
      <%= render "common/admin_navbar"%>
      <%= render "common/flashes"%>
      <div class="row" align="center">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
            <li class="active">
                <%= link_to("职位管理", admin_jobs_path ) %>
            </li>
          </ul>
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:10px;">
            <li class="active">
                <%= link_to("言职论坛", admin_jobs_path ) %>
            </li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
  </div>
    </div>
    <%= render "common/footer"%>
  </body>
</html>
