<% if flash.any? %>
  <% user_facing_flashes.each do |key,value| %>
    <div class="alert alert-dismissable alert-<%= flash_class(key)%>" style="max-width:1000px;margin-top:5px;margin-left: auto;
    margin-right: auto;">
      <button class="close" data-dismiss="alert">x</button>
      <%= value %>
    </div>
  <%end%>
<%end%>
